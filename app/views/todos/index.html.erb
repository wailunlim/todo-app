<h1>All Todos</h1>
<div class="card-columns">
  <% @todos.each do |todo| %>
    <% if todo.completed %>
      <div class="card text-center bg-success">
    <% else %>
      <div class="card text-center bg-warning">
    <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to todo.title, todo %></h5>
          <p class="card-text"><%= todo.task %></p>
          <span class="card-text">Tags: <%= todo.tag %></span>
          <div><%= link_to "delete", @todo, method: :delete,
            data: { confirm: "Are you sure?" },
            class: "btn btn-danger" %></div>
        </div>
      </div>
  <% end %>
</div>
